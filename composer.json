{
  "name": "codenamephp/platform.core",
  "description": "The CodenamePHP Platform core that contains basic interfaces, exceptions etc..",
  "type": "library",
  "keywords": ["library", "exceptions"],
  "homepage": "https://github.com/codenamephp/platform.core",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Bastian Schwarz",
      "email": "bastian@codename-php.de"
    }
  ],
  "require": {
    "php": ">=5.3.0"
  },
  "require-dev": {
    "codenamephp/platform.test": "1.0.*",
    "phing/phing": "2.8.*",
    "phploc/phploc": "*",
    "pdepend/pdepend": "1.0.7",
    "phpmd/phpmd": "*",
    "sebastian/phpcpd": "*",
    "phpdocumentor/phpdocumentor": "*"
  },
  "autoload": {
    "classmap": ["src/main/php"]
  },
  "autoload-dev": {
    "psr-0": {
      "de\\codenamephp\\": ["src/main/php", "src/test/php"],
      "": "vendor/pdepend/pdepend/src/main/php"
    }
  },
  "archive": {
    "exclude": ["/src/test"]
  }
}
